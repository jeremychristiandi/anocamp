<% layout('layouts/boilerplate') %>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>

    <style>
      body {
        margin: 0;
        background-color: rgb(39, 39, 39);
      }

      .welcome {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 80vh;
        animation-name: welcomeText;
        animation-duration: 1.5s;
      }

      .welcome h1,
      h2 {
        color: azure;
      }

      .welcome p {
        color: azure;
        margin: 1em;
      }

      @keyframes welcomeText {
        from {
          opacity: 0;
        }
        to {
          opacity: 1;
        }
      }
    </style>
  </head>
  <body>
    <div class="welcome">
      <h1>Welcome to</h1>
      <h2>AnoCamp</h2>
      <p>Bringing the best camping experience across the world.</p>
    </div>
  </body>
</html>
